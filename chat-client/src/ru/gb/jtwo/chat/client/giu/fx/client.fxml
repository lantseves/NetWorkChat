<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ru.gb.jtwo.chat.client.giu.fx.ClientController">

    <TextField fx:id="tfAddress"
               text="127.0.0.1"
               GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="tfPort"
               text="8189"
               GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <TextField fx:id="tfLogin"
               text="lantsev"
               GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <PasswordField fx:id="pfPassword"
                   text="123"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Button fx:id="btnLogin"
            text="Login"
            onAction="#onClickedLogin"
            GridPane.rowIndex="1" GridPane.columnIndex="2" GridPane.hgrow="ALWAYS"
            maxWidth="Infinity"/>
    <Button fx:id="btnDisconnect"
            text="Disconnect"
            onAction="#onClickedDisconnect"
            GridPane.rowIndex="1" GridPane.columnIndex="3" GridPane.hgrow="ALWAYS"
            maxWidth="Infinity"/>

    <TextArea fx:id="taLog"
              GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.vgrow="ALWAYS"/>

    <ListView fx:id="lvUsers"
              GridPane.rowIndex="2" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.vgrow="ALWAYS"/>

    <TextField fx:id="tfMessage"
               onAction="#onSendMessage"
               GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    <Button fx:id="btnSend"
            text="Send"
            onAction="#onSendMessage"
            GridPane.rowIndex="3" GridPane.columnIndex="2" GridPane.hgrow="ALWAYS"
            maxWidth="Infinity"/>

</GridPane>
